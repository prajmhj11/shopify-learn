<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area ltn__breadcrumb-area-2 ltn__breadcrumb-color-white plr--9 breadcrumbs overlay-bg">
  <div class="{% if section.settings.breadcrumb_large_width_enable %}container-fluid{% else %}container{% endif %}">
    <div class="row">
      <div class="col-lg-12">
        <div class="ltn__breadcrumb-inner ltn__breadcrumb-inner-2 justify-content-between">
          <div class="section-title-area ltn__section-title-2">
            {%- if section.settings.welcome_title != '' -%}
            <h6 class="section-subtitle ltn__secondary-color">{{ section.settings.welcome_title }}</h6>
            {%- endif -%}
            {%- if section.settings.breadcrub_page_title_enable -%}
            {%- if template == 'product' -%}
            <h1 class="breadcrumbs-title section-title white-color">{{ template.name | capitalize }}</h1>
            {%- elsif template == 'article' -%}
            <h1 class="breadcrumbs-title section-title white-color">{{ template.name | capitalize }}</h1>
            {%- elsif template == 'article.service' -%}
            <h1 class="breadcrumbs-title section-title white-color">{{ blog.title | capitalize }}</h1>
            {%- elsif template == 'search' -%}
            <h1 class="breadcrumbs-title section-title white-color">{{ template.name | capitalize }}</h1>
            {%- else -%}
            <h1 class="breadcrumbs-title section-title white-color">{{ page_title | capitalize }}</h1>
            {%- endif -%}
            {%- endif -%}
          </div>
          <div class="ltn__breadcrumb-list">
            {%- render 'breadcrumb-builtin' -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- BREADCRUMB AREA END -->