{%- if template == 'product' -%}
<ul>
  {%- if block.settings.share_title != '' -%}
  <li>{{ block.settings.share_title }}</li>
  {%- endif -%}
  <li><a href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" title="Share on Facebook" target="_blank"><i class="fab fa-facebook-f"></i><span>Facebook</span></a></li>
  <li><a href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" title="Share on Twitter" target="_blank"><i class="fab fa-twitter"></i><span>Twitter</span></a></li>
  {% if product.featured_image or article.image  %}
  <li><a href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" title="Share on Pinterest" target="_blank"><i class="fab fa-pinterest"></i><span>Pinterest</span></a></li>
  {% endif %}
</ul>
{%- endif -%}
{%- if template == 'article' or template == 'blog' -%}
<ul>
  {% capture permalinkURL %}{{ shop.url }}{{ article.url }}{% endcapture %}
  {% capture shareTitle %}{{ article.title | url_param_escape }}{% endcapture %}
  <li><a href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" data-toggle="tooltip" data-placement="top" title="Share on Facebook" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
  <li><a href="//twitter.com/share?text={{ shareTitle }}&amp;url={{ permalinkURL }};source=webclient" data-toggle="tooltip" data-placement="top" title="Share on Twitter" target="_blank"><i class="fab fa-twitter"></i></a></li>
  {% if product.featured_image or article.image  %}
  <li><a href="//pinterest.com/pin/create/button/?url={{ permalinkURL }}&amp;media=http:{% if template contains 'product' %}{{ product | img_url: '1024x1024' }}{% else %}{{ article | img_url: '1024x1024' }}{% endif %}&amp;description={{ shareTitle }}" data-toggle="tooltip" data-placement="top" title="Share on Pinterest" target="_blank"><i class="fab fa-pinterest"></i></a></li>
  {% endif %}
</ul>
{%- endif -%}