<div class="contact-feature-area before-bg-bottom {% if section.settings.margin_bottom_minus %}mb--30{% endif %}" id="section-{{ section.id }}" data-section="contactInfo">
  <div class="container">
    <div class="row justify-content-center">
      {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'contact_info' -%}
      <div class="col-{{ block.settings.service_column_sm }} col-sm-{{ block.settings.service_column_sm }} col-md-{{ block.settings.service_column_md }} col-lg-{{ block.settings.service_column }}">
        <div class="ltn__contact-feature-item">
          {%- if block.settings.icon_image_enable -%}
          {%- if block.settings.icon_image -%}
          <div class="ltn__contact-feature-icon">
            <img src="{{ block.settings.icon_image | img_url: '50x50' }}" alt="{{ block.settings.icon_image.alt }}" loading="lazy">
          </div>
          {%- else -%}
          <div class="ltn__contact-feature-icon">
            {%- case block.settings.icon_image_select -%}
            {%- when 'call' -%}
            <img src="{{ 'icon-call.png' | asset_url  }}" alt="Call Icon" loading="lazy">
            {%- when 'mail' -%}
            <img src="{{ 'icon-mail.png' | asset_url  }}" alt="Mail Icon" loading="lazy">
            {%- when 'address' -%}
            <img src="{{ 'icon-address.png' | asset_url  }}" alt="Address Icon" loading="lazy">
            {%- endcase -%}
          </div>
          {%- endif -%}
          {%- endif -%}
          <div class="ltn__contact-feature-info">
            <a href="{{ block.settings.url }}">
              {%- if block.settings.sub_title != '' -%}
              <span class="h6">{{ block.settings.sub_title }}</span><br>
              {%- endif -%}
              {%- if block.settings.title != '' -%}
              <span class="h2">{{ block.settings.title }}</span>
              {%- endif -%}
            </a>
          </div>
        </div>
      </div>
      {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{%- render 'section-style' -%}

{%- if section.settings.section_color_enable -%}
<style>
  #section-{{ section.id }}.before-bg-bottom:before {
    background-color: {{ section.settings.half_bg_color }};
  }
</style>
{%- endif -%}

