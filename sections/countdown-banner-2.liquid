                   {% if image_2.width >= 510 %}{{ image_2 | img_url: '514x' }} 514w,{% endif %}
                   {% if image_2.width >= 570 %}{{ image_2 | img_url: '570x' }} 570w,{% endif %}
                   {% if image_2.width >= 670 %}{{ image_2 | img_url: '670x' }} 670w,{% endif %}
                   {% if image_2.width >= 770 %}{{ image_2 | img_url: '770x' }} 1100w,{% endif %}
                   {% if image_2.width >= 900 %}{{ image_2 | img_url: '900x' }} 900w,{% endif %}
                   {% if image_2.width >= 970 %}{{ image_2 | img_url: '970x' }} 970w,{% endif %}
                   {% if image_2.width >= 1100 %}{{ image_2 | img_url: '1100x' }} 1100w,{% endif %}
                   {% if image_2.width >= 1200 %}{{ image_2 | img_url: '1200x' }} 1200w{% endif %}"
           loading="lazy"
           src="{{ image_2 | img_url: '514x' }}"
           sizes="100vw"
           width="{{ image_2.width }}"
           height="{{ image_2.height }}"
           alt="{{ image_2.alt | escape }}"
           class="image-position-size"
           >
    </a>
    {%- else -%}
    <img src="https://via.placeholder.com/514x597" alt="Banner">
    {%- endif -%}
  </div>
</div>

