{%- if section.settings.section_color_enable -%}
<style>
  #section-{{ section.id }} .theme-btn-1 {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
  }
  #section-{{ section.id }} .btn-effect-1:hover {
    color: {{ section.settings.button_text_hover_color }};
  }
  #section-{{ section.id }} .theme-btn-1:hover {
    background-color: {{ section.settings.button_bg_hover_color }};
  }
  #section-{{ section.id }} .btn-effect-1:after {
    background: {{ section.settings.button_bg_hover_active_color }};
  }
  #section-{{ section.id }}.bg-overlay-theme-black-60:before {
    background-color: {{ section.settings.overlay_color | color_modify: 'alpha', section.settings.overlay_color_opatity }};
  }
  #section-{{ section.id }} .ltn__section-title-2 .section-subtitle {
    color: {{ section.settings.sub_title_color }}!important;
  }
  #section-{{ section.id }} .ltn__section-title-2 .section-title {
    color: {{ section.settings.title_color }};
  }
  #section-{{ section.id }} .section-title span{
    color: {{ section.settings.title_highlight_color }};
  }
</style>
{%- endif -%}

{%- render 'section-style' -%}

<!-- CALL TO ACTION START ( Service Form ) -->
<div class="ltn__service-form-wrap-area" data-section="serviceAppointment2">
  <div class="container-fluid ">
    <div class="row">
      <div class="col-xl-11 offset-xl-1">
        <div class="ltn__service-form-area ltn__service-form-1 {% if section.settings.margin_top_minus_enable %}ltn__service-form-margin{% endif %} bg-overlay-theme-black-60" id="section-{{ section.id }}">
          <div class="row">
            <div class="col-xl-12 col-lg-12 align-self-center">
              <div class="ltn__service-form-brief">
                <div class="section-title-area ltn__section-title-2 mb-0">
                  {%- if section.settings.sub_title != '' -%}
                  <h6 class="section-subtitle white-color">{{ section.settings.sub_title }}</h6>
                  {%- endif -%}
                  {%- if section.settings.title != '' -%}
                  <h1 class="section-title white-color">{{ section.settings.title }}</h1>
                  {%- endif -%}
                </div>
                {%- if section.settings.button_title != '' -%}
                <div class="btn-wrapper">
                  <a {% if section.settings.target_blank_enable %}target="_blank"{% endif %} id="Setmore_button_iframe" href="{{ section.settings.button_url }}" class="btn theme-btn-1 btn-effect-1">
                    {{ section.settings.button_title }}
                  </a>
                </div>
                {%- endif -%}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- CALL TO ACTION END -->

