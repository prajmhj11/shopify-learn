{%- if section.settings.section_color_enable -%}
<style>
  #section-{{ section.id }} .theme-btn-1 {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
  }
  #section-{{ section.id }} .btn-effect-1:hover {
    color: {{ section.settings.button_text_hover_color }};
  }
  #section-{{ section.id }} .theme-btn-1:hover {
    background-color: {{ section.settings.button_bg_hover_color }};
  }
</style>
{%- endif -%}

{%- render 'section-style' -%}

<div class="ltn__about-us-area" id="section-{{ section.id }}" data-section="aboutWithImage">
  <div class="container">
    <div class="row">
      {%- if section.settings.about_image_enable -%}
      <div class="col-lg-6 align-self-center">        
        <div class="about-us-img-wrap about-img-left">
          {%- if section.settings.about_image -%}
          {%- assign image = section.settings.about_image -%}
          <span class="image-position-wrapper" style="padding-bottom: {{ 1 | divided_by: image.aspect_ratio | times: 100 }}%;">
            <img srcset="{% if image.width >= 270 %}{{ image | img_url: '270x' }} 270w,{% endif %}
                         {% if image.width >= 300 %}{{ image | img_url: '300x' }} 300w,{% endif %}
                         {% if image.width >= 328 %}{{ image | img_url: '328x' }} 328w,{% endif %}
                         {% if image.width >= 370 %}{{ image | img_url: '370x' }} 370w,{% endif %}
                         {% if image.width >= 420 %}{{ image | img_url: '420x' }} 420w,{% endif %}
                         {% if image.width >= 540 %}{{ image | img_url: '540x' }} 540w,{% endif %}
                         {% if image.width >= 570 %}{{ image | img_url: '570x' }} 570w,{% endif %}
                         {% if image.width >= 670 %}{{ image | img_url: '670x' }} 670w,{% endif %}
                         {% if image.width >= 770 %}{{ image | img_url: '770x' }} 1100w,{% endif %}
                         {% if image.width >= 900 %}{{ image | img_url: '900x' }} 900w,{% endif %}
                         {% if image.width >= 970 %}{{ image | img_url: '970x' }} 970w,{% endif %}
                         {% if image.width >= 1100 %}{{ image | img_url: '1100x' }} 1100w,{% endif %}
                         {% if image.width >= 1200 %}{{ image | img_url: '1200x' }} 1200w{% endif %}"
                 loading="lazy"
                 src="{{ image | img_url: '540x' }}"
                 sizes="100vw"
                 width="{{ image.width }}"
                 height="{{ image.height }}"
                 alt="{{ image.alt | escape }}"
                 class="image-position-size"
                 >
          </span>
          {%- else -%}
          <img src="https://via.placeholder.com/540x540" alt="Banner">
          {%- endif -%}
          {%- if section.settings.about_img_info_enable -%}
          <div class="about-us-img-info about-us-img-info-2">
            <div class="about-us-img-info-inner">
              {%- if section.settings.about_img_title != '' -%}
              <h1>{{ section.settings.about_img_title }}</h1>
              {%- endif -%}
              {%- if section.settings.about_img_title_2 != '' -%}
              <h6>{{ section.settings.about_img_title_2 }}</h6>
              {%- endif -%}
              {%- if section.settings.about_img_dots_enable -%}
              <span class="dots-bottom"></span>
              {%- endif -%}
            </div>
          </div>
          {%- endif -%}
        </div>        
      </div>
      {%- endif -%}
      {%- if section.settings.about_information_enable -%}
      <div class="col-lg-6 align-self-center">
        <div class="about-us-info-wrap">
          <div class="section-title-area ltn__section-title-2">
            {%- if section.settings.sub_title != '' -%}
            <h6 class="section-subtitle ltn__secondary-color">{{ section.settings.sub_title }}</h6>
            {%- endif -%}
            {%- if section.settings.title != '' -%}
            <h1 class="section-title">{{ section.settings.title }}</h1>
            {%- endif -%}
            {%- if section.settings.blockquote_content != '' -%}
            {{ section.settings.blockquote_content }}
            {%- endif -%}
          </div>
          {%- if section.settings.main_content_enable -%}
            {%- if section.settings.main_content != '' -%}
            {{ section.settings.main_content }}
            {%- endif -%}
          {%- endif -%}
          {%- if section.settings.main_content_with_list_enable -%}
            {%- if section.settings.main_content != '' or section.settings.title_with_link != '' -%}
            <div class="about-us-info-wrap-inner about-us-info-devide">
              {%- if section.settings.main_content != '' -%}
              {{ section.settings.main_content }}
              {%- endif -%}
              {%- if section.settings.title_with_link != '' -%}
              <div class="list-item-with-icon">
                <ul>
                  {{ section.settings.title_with_link }}
                </ul>
              </div>
              {%- endif -%}
            </div>
            {%- endif -%}
          {%- endif -%}
          {%- if section.settings.show_button -%}
          <div class="btn-wrapper mt-0">
            <a id="Setmore_button_iframe" href="{{ section.settings.button_url }}" class="btn theme-btn-1 btn-effect-1">{{ section.settings.button_title }}</a>
          </div>
          {%- endif -%}
        </div>
      </div>
      {%- endif -%}
    </div>
  </div>
</div>

