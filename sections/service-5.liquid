{%- for block in section.blocks -%}
{%- case block.type -%}
{%- when 'service' -%}
{%- if block.settings.block_color_enable -%}
<style>
  #block-{{ block.id }} h3 {
    color: {{ block.settings.title_color }};
  }
  #block-{{ block.id }} h3:hover{
    color: {{ block.settings.title_hover_color }};
  }
  #block-{{ block.id }} p{
    color: {{ block.settings.content_color }};
  }
</style>
{%- endif -%}
{%- endcase -%}
{%- endfor -%}

{%- render 'section-style' -%}

<!-- WHY CHOOSE US AREA START -->
<div class="ltn__why-choose-us-area section-bg-1" id="section-{{ section.id }}" data-section="serviceSectionFive">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="why-choose-us-info-wrap">
          {%- if section.settings.section_title != '' or section.settings.section_sub_title != '' -%}
          <div class="section-title-area ltn__section-title-2 text-center---">
            {%- if section.settings.section_sub_title != '' -%}
            <h6 class="section-subtitle ltn__secondary-color">{{ section.settings.section_sub_title }}</h6>
            {%- endif -%}
            {%- if section.settings.section_title != '' -%}
            <h1 class="section-title">{{ section.settings.section_title }}</h1>
            {%- endif -%}
            {%- if section.settings.blockquote_content != '' -%}
            {{ section.settings.blockquote_content }}
            {%- endif -%}
          </div>
          {%- endif -%}
          <div class="row">
            {%- for block in section.blocks -%}
            {%- case block.type -%}
            {%- when 'service' -%}
            <div class="col-{{ block.settings.service_column_sm }} col-sm-{{ block.settings.service_column_sm }} col-md-{{ block.settings.service_column_md }} col-lg-{{ block.settings.service_column }}" id="block-{{ block.id }}">
              <div class="why-choose-us-feature-item">
                {%- if block.settings.icon_image_enable and block.settings.service_icon -%}
                <div class="why-choose-us-feature-icon">
                  <img src="{{ block.settings.service_icon | img_url: '100x' }}" alt="{{ block.settings.service_icon.alt }}" loading="lazy">
                </div>
                {%- elsif block.settings.service_icon_enable -%}
                <div class="why-choose-us-feature-icon">            
                  {%- if block.settings.service_icon_select == 'parts' -%}
                  <i class="icon-car-parts"></i>
                  {%- elsif block.settings.service_icon_select == 'parts_2' -%}
                  <i class="icon-car-parts-1"></i>
                  {%- elsif block.settings.service_icon_select == 'parts_3' -%}
                  <i class="icon-car-parts-3"></i>
                  {%- elsif block.settings.service_icon_select == 'mechanic_one' -%}
                  <i class="icon-car"></i>
                  {%- elsif block.settings.service_icon_select == 'mechanic_two' -%}
                  <i class="icon-mechanic"></i>
                  {%- elsif block.settings.service_icon_select == 'car_service' -%}
                  <i class="icon-car-service"></i>
                  {%- elsif block.settings.service_icon_select == 'settings' -%}
                  <i class="icon-cog"></i>
                  {%- elsif block.settings.service_icon_select == 'automobile' -%}
                  <i class="icon-automobile"></i>
                  {%- elsif block.settings.service_icon_select == 'maintenance' -%}
                  <i class="icon-maintenance-1"></i>
                  {%- elsif block.settings.service_icon_select == 'repair' -%}
                  <i class="icon-repair"></i>
                  {%- endif -%}
                </div>
                {%- endif -%}
                {%- if block.settings.service_title != '' or block.settings.service_content != '' -%}
                <div class="why-choose-us-feature-brief">
                  {%- if block.settings.service_title != '' -%}
                  <h3><a href="{{ block.settings.service_url }}">{{ block.settings.service_title }}</a></h3>
                  {%- endif -%}
                  {%- if block.settings.service_content != '' -%}
                  {{ block.settings.service_content }}
                  {%- endif -%}
                </div>
                {%- endif -%}
              </div>
            </div>
            {%- endcase -%}
            {%- endfor -%}            
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="why-choose-us-img-wrap">
          <div class="why-choose-us-img-1 text-left">
            {%- if section.settings.image -%}
            {%- assign image = section.settings.image -%}
            <span>
              <img srcset="{% if image.width >= 213 %}{{ image | img_url: '213x' }} 213w,{% endif %}
                           {% if image.width >= 290 %}{{ image | img_url: '290x' }} 290w,{% endif %}
                           {% if image.width >= 330 %}{{ image | img_url: '330x' }} 330w,{% endif %}
                           {% if image.width >= 370 %}{{ image | img_url: '370x' }} 370w,{% endif %}
                           {% if image.width >= 440 %}{{ image | img_url: '440x' }} 440w,{% endif %}
                           {% if image.width >= 570 %}{{ image | img_url: '570x' }} 570w,{% endif %}
                           {% if image.width >= 600 %}{{ image | img_url: '600x' }} 600w,{% endif %}
                           {% if image.width >= 670 %}{{ image | img_url: '670x' }} 670w,{% endif %}
                           {% if image.width >= 770 %}{{ image | img_url: '770x' }} 1100w,{% endif %}
                           {% if image.width >= 900 %}{{ image | img_url: '900x' }} 900w,{% endif %}
                           {% if image.width >= 970 %}{{ image | img_url: '970x' }} 970w,{% endif %}
                           {% if image.width >= 1100 %}{{ image | img_url: '1100x' }} 1100w,{% endif %}
                           {% if image.width >= 1200 %}{{ image | img_url: '1200x' }} 1200w{% endif %}"
                   loading="lazy"
                   src="{{ image | img_url: '600x' }}"
                   sizes="100vw"
                   alt="{{ image.alt | escape }}"
                   >
            </span>
            {%- else -%}
            <img src="https://via.placeholder.com/600x524" alt="Service Image">
            {%- endif -%}
          </div>
          <div class="why-choose-us-img-2 text-right">
            {%- if section.settings.image_2 -%}
            {%- assign image = section.settings.image_2 -%}
            <span>
              <img srcset="{% if image.width >= 213 %}{{ image | img_url: '213x' }} 213w,{% endif %}
                           {% if image.width >= 290 %}{{ image | img_url: '290x' }} 290w,{% endif %}
                           {% if image.width >= 330 %}{{ image | img_url: '330x' }} 330w,{% endif %}
                           {% if image.width >= 370 %}{{ image | img_url: '370x' }} 370w,{% endif %}
                           {% if image.width >= 440 %}{{ image | img_url: '440x' }} 440w,{% endif %}
                           {% if image.width >= 570 %}{{ image | img_url: '570x' }} 570w,{% endif %}
                           {% if image.width >= 600 %}{{ image | img_url: '600x' }} 600w,{% endif %}
                           {% if image.width >= 670 %}{{ image | img_url: '670x' }} 670w,{% endif %}
                           {% if image.width >= 770 %}{{ image | img_url: '770x' }} 1100w,{% endif %}
                           {% if image.width >= 900 %}{{ image | img_url: '900x' }} 900w,{% endif %}
                           {% if image.width >= 970 %}{{ image | img_url: '970x' }} 970w,{% endif %}
                           {% if image.width >= 1100 %}{{ image | img_url: '1100x' }} 1100w,{% endif %}
                           {% if image.width >= 1200 %}{{ image | img_url: '1200x' }} 1200w{% endif %}"
                   loading="lazy"
                   src="{{ image | img_url: '600x' }}"
                   sizes="100vw"
                   alt="{{ image.alt | escape }}"
                   >
            </span>
            {%- else -%}
            <img src="https://via.placeholder.com/600x576" alt="Service Image">
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- WHY CHOOSE US AREA END -->

