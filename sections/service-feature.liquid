  #block-{{ block.id }}.ltn__feature-item-3 .ltn__feature-icon {
    color: {{ block.settings.icon_color }};
  }
  #block-{{ block.id }} h2 {
    color: {{ block.settings.title_color }};
  }
  #block-{{ block.id }} h2 a:hover{
    color: {{ block.settings.title_hover_color }};
  }
  #block-{{ block.id }} p{
    color: {{ block.settings.content_color }};
  }
</style>
{%- endif -%}
