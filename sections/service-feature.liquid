<!-- FEATURE AREA START ( Feature - 3) -->
<div class="ltn__feature-area" id="section-{{ section.id }}" data-section="serviceFeature">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title-area ltn__section-title-2 section-title-style-3">
          {%- if section.settings.blockquote_content != '' -%}
          <div class="section-brief-in">
            {{ section.settings.blockquote_content }}
          </div>
          {%- endif -%}
          <div class="section-title-in">
            {%- if section.settings.section_sub_title != '' -%}
            <h6 class="section-subtitle ltn__secondary-color">{{ section.settings.section_sub_title }}</h6>
            {%- endif -%}
            {%- if section.settings.section_title != '' -%}
            <h1 class="section-title">{{ section.settings.section_title }}</h1>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4">
        <div class="row  justify-content-center">
          {%- for block in section.blocks -%}
          {%- case block.type -%}
          {%- when 'service' -%}
          <div class="col-lg-12 col-md-6 col-12">
            <div class="ltn__feature-item ltn__feature-item-3 text-right" id="block-{{ block.id }}">
              {%- if block.settings.icon_image_enable and block.settings.service_icon -%}
              <div class="ltn__feature-icon">
                <img src="{{ block.settings.service_icon | img_url: '100x' }}" alt="{{ block.settings.service_icon.alt }}" loading="lazy">
              </div>
              {%- elsif block.settings.service_icon_enable -%}
              <div class="ltn__feature-icon">
                {%- if block.settings.service_icon_select == 'parts' -%}
                <span><i class="icon-car-parts"></i></span>
                {%- elsif block.settings.service_icon_select == 'parts_2' -%}
                <span><i class="icon-car-parts-1"></i></span>
                {%- elsif block.settings.service_icon_select == 'parts_3' -%}
