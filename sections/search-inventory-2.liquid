<!-- SLIDER AREA START (slider-4) -->
<div class="ltn__slider-area ltn__slider-4 " id="section-{{ section.id }}" data-section="searchInventory2">
  <div class="ltn__slide-one-active----- slick-slide-arrow-1----- slick-slide-dots-1----- arrow-white----- ltn__slide-animation-active">
    <!-- ltn__slide-item -->
    <div class="ltn__slide-item ltn__slide-item-2 ltn__slide-item-4 bg-overlay-theme-black-80 {% if section.settings.banner_image %}bg-image{% endif %}" {% if section.settings.banner_image %}data-bg="{{ section.settings.banner_image | img_url: '1920x' }}"{% endif %}>
      <div class="ltn__slide-item-inner text-left">
        <div class="container">
          <div class="row">
            <div class="col-lg-12 align-self-center">
              <div class="slide-item-car-dealer-form">
                {%- if section.settings.style_handle == 'style_1' -%}
                <div class="ltn__car-dealer-form-tab">
                  <div class="ltn__tab-menu">
                    <div class="nav">
                      <a class="active show" data-toggle="tab" href="#ltn__form_tab_1_1">{{ section.settings.title }}</a>
                    </div>
                  </div>
                  <div class="tab-content">
                    <div class="tab-pane fade active show" id="ltn__form_tab_1_1">
                      <div class="car-dealer-form-inner text-center text-right---">
                        <div class="ltn__car-dealer-form-box">
                          <!--GoVedia -->
                          <div class="page-width wrapper container">
                            <div class="gv-mmy-bar">
                              <div id="gv-mmy">
                              </div>
                              <script type="text/javascript">var MMY_Collection = {% if template contains 'collection' %}true{% else %}false{% endif %};var MMY_Tags = '{{ current_tags }}';var MMY_Handle = '{{ collection.handle }}';var MMY_Customer = '{{customer.id}}';var MMY_Vehicles = '{{customer.metafields.global.mmy}}';</script>
                            </div>
                          </div>
                          <!--End GoVedia-->
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                {%- elsif section.settings.style_handle == 'style_2' -%}
                {%- if section.settings.title != '' -%}
                <h1 class="slide-title text-color-white text-center mb-10">{{ section.settings.title }}</h1>
                {%- endif -%}
                {%- if section.settings.sub_title != '' -%}
                <h3 class="text-color-white text-center mb-30">{{ section.settings.sub_title }}</h3>
                {%- endif -%}
                <div class="ltn__car-dealer-form-tab">
                  <div class="tab-content pb-30">
                    <div class="car-dealer-form-inner text-center">
                      <!--GoVedia -->
                      <div class="page-width wrapper container">
                        <div class="gv-mmy-bar">
                          <div id="gv-mmy">
                          </div>
                          <script type="text/javascript">var MMY_Collection = {% if template contains 'collection' %}true{% else %}false{% endif %};var MMY_Tags = '{{ current_tags }}';var MMY_Handle = '{{ collection.handle }}';var MMY_Customer = '{{customer.id}}';var MMY_Vehicles = '{{customer.metafields.global.mmy}}';</script>
                        </div>
                      </div>
                      <!--End GoVedia-->
                    </div>
                  </div>
                </div>  
                {%- endif -%}                                  
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- SLIDER AREA END -->

{%- if section.settings.section_color_enable -%}
<style>
  #section-{{ section.id }} .bg-overlay-theme-black-80:before {
    background-color: {{ section.settings.overlay_color | color_modify: 'alpha', section.settings.overlay_color_opatity }};
  }
</style>
{%- endif -%}

