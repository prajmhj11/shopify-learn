{%- assign ssfbi = section.settings.footer_top_bg_image -%}
{%- assign sslwe = section.settings.large_width_enable -%}

<footer class="ltn__footer-area" data-section="footerActive" id="section-{{ section.id }}">
  {%- if section.settings.footer_top_enable -%}
  {%- render 'footer-top' -%}
  {%- endif -%}
  {%- if section.settings.copyright_enable -%}
  <div class="ltn__copyright-area ltn__copyright-2 {% if sslwe %}plr--9{% endif %}">
    <div class="{% if sslwe %}container-fluid{% else %}container{% endif %}">
      <div class="row">
        <div class="{%- if section.settings.copyright_conten_style == 'style_3' and section.settings.menu_handle == blank -%}col-12 text-center{% else %}col-md-6 col-12{% endif %}">
          <div class="site-logo-wrap">
            {%- if section.settings.copyright_conten_style == 'style_1' -%}
            {%- assign logo_size = section.settings.logo_width | append: 'x' -%}
            {%- if section.settings.logo -%}
            <div class="site-logo">
              <a href="{{ routes.root_url }}">
                <img srcset="{{ section.settings.logo | img_url: logo_size }} 1x, {{ section.settings.logo | img_url: logo_size, scale: 2 }} 2x"
                     src="{{ section.settings.logo | img_url: logo_size }}"
                     loading="lazy"
                     alt="{{ section.settings.logo.alt | default: shop.name | escape }}"
                     >
              </a>
            </div>
            {%- endif -%}
            <div class="{% if section.settings.logo %}get-support {% endif %}ltn__copyright-design clearfix">
              <div class="get-support-info">
                {%- if section.settings.copyright_title != '' -%}
                <h6>{{ section.settings.copyright_title }}</h6>
                {%- endif -%}
                {%- if section.settings.copyright_content != '' -%}
                <h4>{{ section.settings.copyright_content }} {% if section.settings.copyright_year_enable %}<span class="current-year"></span>{% endif %}</h4>
                {%- endif -%}
              </div>
            </div>
            {%- elsif section.settings.copyright_conten_style == 'style_2' -%}
            <div class="ltn__copyright-design clearfix">
              {{ section.settings.copy_ritht_text }}
            </div>
            {%- elsif section.settings.copyright_conten_style == 'style_3' -%}
            <div class="ltn__copyright-design clearfix">
              {{ section.settings.copy_ritht_text }}
            </div>
            {%- endif -%}
          </div>
        </div>
        <div class="col-md-6 col-12 align-self-center">
          <div class="ltn__copyright-menu text-right">
            <ul>
              {%- assign menu = section.settings.menu_handle -%}
              {%- for link in linklists[menu].links -%}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {%- endfor -%}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  {%- if section.settings.section_color_enable_2 -%}
  <style>
    #section-{{ section.id }} .ltn__copyright-area {
      background: {{ section.settings.copyright_bg_color }};
      color: {{ section.settings.copyright_color }};
      {% if section.settings.border_top_color != '' %}
      border-top: 1px solid {{ section.settings.border_top_color }};
      {% endif %}
    }
    #section-{{ section.id }} .get-support::before {
      background-color: {{ section.settings.copyright_border_color }};
    }
    #section-{{ section.id }} .get-support-info h6, #section-{{ section.id }} .get-support-info h4, #section-{{ section.id }} .ltn__copyright-design p{
      color: {{ section.settings.copyright_color }}
    }
  </style>
  {%- endif -%}
  {%- endif -%}
</footer>
