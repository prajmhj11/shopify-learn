<style media="screen">

  [data-section-id="{{ section.id }}"].hero-image {
    {% if section.settings.image_bg %}
      background-image: url({{ section.settings.image_bg | img_url: '2000x' | format: 'jpg' }});
    {% endif %}
  }

  [data-section-id="{{ section.id }}"] .hero-image__content {
    {% if section.settings.color_text %}
      color: {{section.settings.color_text}};
    {% endif %}
  }

  [data-section-id="{{ section.id }}"] .btn--default {
    {% if section.settings.link_color_text %}
      color:{{section.settings.link_color_text}};
    {% endif %}
    {% if section.settings.link_bg_color %}
      background-color:{{section.settings.link_bg_color}};
    {% endif %}
  }

  [data-section-id="{{ section.id }}"] .btn--default:before{
    {% if section.settings.hober_link_bg_color %}
      background-color:{{section.settings.hober_link_bg_color}};
    {% endif %}
  }

</style>

<section data-section-id="{{ section.id }}" data-section-type="product" class="hero-image clearfix">
  <div class="hero-image__content text-center">
    {% if section.settings.title != blank %}
      <h1 class="hero-image__title">{{ section.settings.title }}</h1>
    {% endif %}
    {% if section.settings.description != blank %}
      <p class="hero-image__desc">{{ section.settings.description }}</p>
    {% endif %}
    {% if section.settings.link%}
      <a class="btn btn--default"
        href="{{ section.settings.link }}"
        title="{{ 'general.hero_image.button' | t }}">
          {{ 'general.hero_image.button' | t }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Hero image",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Real Food Projects"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Featuring 30 Skills and 47 Recipes from Scratch, this book will change the way you cook."
      },
      {
        "type":"color",
        "id":"color_text",
        "label":"Text color"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Button link"
      },
      {
        "type":"color",
        "id":"link_color_text",
        "label":"Text link color"
      },
      {
        "type":"color",
        "id":"link_bg_color",
        "label":"Link background color"
      },
      {
        "type":"color",
        "id":"hober_link_bg_color",
        "label":"Hover state link background color"
      },
      {
        "type": "image_picker",
        "id": "image_bg",
        "label": "Background image"
      }
    ],
	   "presets": [
      {
        "name": "Hero image",
        "category": "Hero sections"
      }
    ]
  }
{% endschema %}
