{%- if section.settings.section_color_enable -%}
<style>
  #section-{{ section.id }} .slide-item-info-inner .slide-sub-title {
    color: {{ section.settings.sub_title_color }}!important;
  }
  #section-{{ section.id }} .slide-item-info-inner .slide-title {
    color: {{ section.settings.title_color }};
  }
  #section-{{ section.id }} .bg-overlay-theme-black-70:before {
    background-color: {{ section.settings.overlay_color | color_modify: 'alpha', section.settings.overlay_color_opatity }};
  }
</style>
{%- endif -%}

{%- render 'section-style' -%}

<!-- SLIDER AREA START (slider-6) -->
<div class="ltn__slider-area ltn__slider-2--- ltn__slider-6 section-bg-2" id="section-{{ section.id }}" data-section="popupVideoBanner2">
  <div class="ltn__slide-one-active slick-slide-arrow-1 slick-slide-dots-1 arrow-white">
    <!-- ltn__slide-item -->
    <div class="ltn__slide-item ltn__slide-item-2--- ltn__slide-item-6 text-color-white bg-image bg-overlay-theme-black-70" {% if section.settings.banner_image %}data-bg="{{ section.settings.banner_image | img_url: '1920x' }}"{% endif %}>
      <div class="ltn__slide-item-inner text-center">
        <div class="container">
          <div class="row">
            <div class="col-lg-12 align-self-center">
              <div class="slide-item-info">
                <div class="slide-item-info-inner ltn__slide-animation">
                  <div class="slide-video mb-50">
                    <a class="ltn__video-icon-2 ltn__video-icon-2-border--- ltn__secondary-bg" href="https://www.youtube.com/embed/{{ section.settings.video_url.id }}" data-rel="lightcase:lightcase:section-{{ section.id }}-myCollection">
                      <i class="fa fa-play"></i>
                    </a>
                  </div>
                  {%- if section.settings.sub_title != '' -%}
                  <h6 class="slide-sub-title white-color animated">{{ section.settings.sub_title }}</h6>
                  {%- endif -%}
                  {%- if section.settings.title != '' -%}
                  <h1 class="slide-title animated ">{{ section.settings.title }}</h1>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--  -->
  </div>
</div>
<!-- SLIDER AREA END -->

