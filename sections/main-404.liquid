<div class="ltn__404-area ltn__404-area-1" id="section-{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="error-404-inner text-center">
          <h1 class="error-404-title">404</h1>
          {% if section.settings.heading_404 !='' %}
          <h2>{{ section.settings.heading_404 }}</h2>
          {% endif %}
          {% if section.settings.sub_text_404 !='' %}
          <p>{{ section.settings.sub_text_404 }}</p>
          {% endif %}
          {% if section.settings.button_title !='' %}
          <div class="btn-wrapper">
            <a href="{{ section.settings.button_url }}" class="btn btn-transparent"><i class="fas fa-long-arrow-alt-left"></i> {{ section.settings.button_title }}</a>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{%- render 'section-style' -%}

